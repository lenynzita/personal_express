<!doctype html>
<html>
<head>
    <title>Your Daily Journal</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div>
          <h2>Daily Task</h2>
          <h3>Add a message</h3>
          <% if (user.local.email) { %>
            <form action="/entries" method="POST">
              <input type="date" value="<%= user.local.email %>" name="name">
              <input type="text" placeholder="Write Your List" name="msg">
              <button class="btn" type="submit">Submit</button>
            </form>
          <ol class="entries">
          <% for(var i=0; i<entries.length; i++) {%>
            <li class="entry">
              <span><%= entries[i].name %></span>
              <span><%= entries[i].msg %></span>
             <span> <%= entries[i].completed %></span>
              <span><i class="fa fa-check" aria-hidden=" "></i></span>
            
              <span><i class="fa fa-trash" aria-hidden=" "></i></span>
            </li>
          <% } %>
          </ul>

          
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
